<h3>Edit your profile</h3>
<section>
{{#if ops}}
    <p><b>Ops, something went wrong. Sorry.</b></p>
{{/if}}
</section>
<section>
    <form action="/editprofile" method="POST" id="editprofile">
        <label for="firstname">First name:</label><br>
        <input type="text" id="firstname" name="firstname" value={{firstname}}><br><br>
        <label for="lastname">Last name:</label><br>
        <input type="text" id="lastname" name="lastname" value={{lastname}}><br><br>
        {{!-- <label for="email">E-mail:</label><br>
        <input type="email" id="email" name="email" value={{email}}><br><br> --}}
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password" value={{password}}><br><br>
        <label for="city">City:</label><br>
        <input type="text" id="city" name="city" value={{city}}><br><br>
        <label for="age">Age:</label><br>
        <input type="text" id="age" name="age" value={{age}}><br><br>         
        <label for="homepage">Homepage:</label><br>
        <input type="text" id="homepage" name="homepage" value={{homepage}}><br><br>
        <div>
            <button type="submit" value="submit">Submit</button>
        </div>
    </form>
</section>
<footer>
    <a href="/logout">Log out</a>
</footer>